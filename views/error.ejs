<%- include('layout', { title: 'Error' }) %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h1 class="display-4 mb-4" style="color:#00eaff; text-shadow:0 0 16px #00eaff99, 0 0 32px #00eaff22; font-weight:700;">Oops!</h1>
            <div class="alert alert-danger" style="background:#232a34; color:#ff4b6e; border:1px solid #ff4b6e55;">
                <%= message %>
            </div>
            <a href="/" class="btn btn-primary mt-3">Go Home</a>
        </div>
    </div>
</div> 