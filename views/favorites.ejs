<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Favorites | Superhero Website</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <style>
        body { background: #181c24; color: #e0e6ed; }
        .navbar-brand {
            text-shadow: 0 0 8px #00eaff, 0 0 16px #00eaff44;
            font-size: 1.5rem;
            letter-spacing: 2px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Superhero Website</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <% if (locals.user) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/superhero/favorites">
                                <i class="bi bi-star-fill" style="color:#ffae00;"></i> Favorites
                            </a>
                        </li>
                    <% } %>
                </ul>
                <ul class="navbar-nav">
                    <% if (locals.user) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/profile">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/logout">Logout</a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/register">Register</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container my-4">
        <% if (locals.messages && messages.error) { %>
            <div class="alert alert-danger">
                <%= messages.error %>
            </div>
        <% } %>
        <% if (locals.messages && messages.success) { %>
            <div class="alert alert-success">
                <%= messages.success %>
            </div>
        <% } %>
        
        <div class="container">
            <div class="row mb-4">
                <div class="col">
                    <h1 style="color:#00eaff; text-shadow:0 0 12px #00eaff99, 0 0 32px #00eaff22; font-weight:700; letter-spacing:2px;">
                        <i class="bi bi-star-fill" style="color:#ffae00;"></i> My Favorites
                    </h1>
                </div>
            </div>

            <% if (locals.message) { %>
                <div class="row">
                    <div class="col">
                        <div class="alert alert-info text-center" style="background:#00eaff22; border:1px solid #00eaff44; color:#00eaff;">
                            <%= message %>
                        </div>
                    </div>
                </div>
            <% } %>

            <!-- Superhero Cards Grid -->
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                <% if (locals.superheroes && superheroes.length > 0) { %>
                    <% superheroes.forEach(hero => { %>
                        <div class="col">
                            <div class="card h-100" style="background:#232a34; border:1px solid #00eaff33;">
                                <img src="<%= hero.image %>" class="card-img-top" alt="<%= hero.name %>" style="border-bottom:1px solid #00eaff22;">
                                <div class="card-body">
                                    <h5 class="card-title" style="color:#00eaff; font-weight:600; letter-spacing:1px; text-shadow:0 0 8px #00eaff55;">
                                        <%= hero.name %>
                                    </h5>
                                    <p class="card-text" style="color:#b0c4d4;">
                                        <% if (hero.biography && hero.biography.publisher) { %>
                                            <span style="color:#00eaff;">Publisher:</span> <%= hero.biography.publisher %><br>
                                        <% } %>
                                        <% if (hero.powerstats) { %>
                                            <span style="color:#00eaff;">Power:</span> <%= hero.powerstats.power || 'N/A' %>
                                        <% } %>
                                    </p>
                                    <div class="d-flex gap-2">
                                        <a href="/superhero/<%= hero.apiId %>" class="btn btn-primary flex-fill">View Details</a>
                                        <form action="/superhero/<%= hero.apiId %>/favorite" method="POST" style="margin:0;">
                                            <button type="submit" class="btn btn-outline-danger" title="Remove from favorites">
                                                <i class="bi bi-star-fill"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
            </div>

            <% if (locals.superheroes && superheroes.length > 0) { %>
                <div class="row mt-4">
                    <div class="col text-center">
                        <a href="/" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-left"></i> Back to All Superheroes
                        </a>
                    </div>
                </div>
            <% } %>
        </div>
    </main>

    <footer class="footer mt-auto py-3" style="background:#181c24; color:#00eaffcc; border-top:2px solid #00eaff33; box-shadow:0 -2px 8px #00eaff11; text-align:center; position:fixed; left:0; bottom:0; width:100%; z-index:100;">
        <div class="container">
            <span>&copy; <%= new Date().getFullYear() %> Superhero Website</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Set progress bar widths
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.progress-bar[data-width]').forEach(function(bar) {
                const width = bar.getAttribute('data-width');
                bar.style.width = width + '%';
            });
        });
    </script>
</body>
</html> 