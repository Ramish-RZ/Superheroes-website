<%- include('layout', { title: superhero.name }) %>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img src="<%= superhero.image %>" class="img-fluid rounded shadow-lg" alt="<%= superhero.name %>" style="background:#181c24; border:2px solid #00eaff44;">
        </div>
        <div class="col-md-8">
            <h1 style="color:#00eaff; text-shadow:0 0 12px #00eaff99, 0 0 32px #00eaff22; font-weight:700; letter-spacing:2px;">
                <%= superhero.name %>
            </h1>
            
            <% if (superhero.biography) { %>
                <div class="card mb-4" style="background:#232a34; border:1px solid #00eaff33;">
                    <div class="card-header" style="background:#232a34; border-bottom:1px solid #00eaff22;">
                        <h2 class="h5 mb-0" style="color:#00eaff;">Biography</h2>
                    </div>
                    <div class="card-body">
                        <% if (superhero.biography.fullName) { %>
                            <p><strong style="color:#00eaff;">Full Name:</strong> <%= superhero.biography.fullName %></p>
                        <% } %>
                        <% if (superhero.biography.alterEgos) { %>
                            <p><strong style="color:#00eaff;">Alter Egos:</strong> <%= superhero.biography.alterEgos %></p>
                        <% } %>
                        <% if (superhero.biography.publisher) { %>
                            <p><strong style="color:#00eaff;">Publisher:</strong> <%= superhero.biography.publisher %></p>
                        <% } %>
                        <% if (superhero.biography.alignment) { %>
                            <p><strong style="color:#00eaff;">Alignment:</strong> <%= superhero.biography.alignment %></p>
                        <% } %>
                    </div>
                </div>
            <% } %>

            <% if (superhero.powerstats) { %>
                <div class="card mb-4" style="background:#232a34; border:1px solid #00eaff33;">
                    <div class="card-header" style="background:#232a34; border-bottom:1px solid #00eaff22;">
                        <h2 class="h5 mb-0" style="color:#00eaff;">Power Stats</h2>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <% Object.entries(superhero.powerstats).forEach(([stat, value]) => { %>
                                <div class="col-6 mb-2">
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" 
                                             data-width="<%= value %>"
                                             aria-valuenow="<%= value %>" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                            <span style="color:#00eaff; font-weight:600;">
                                                <%= stat.charAt(0).toUpperCase() + stat.slice(1) %>
                                            </span>: <%= value %>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            <% } %>

            <% if (superhero.appearance) { %>
                <div class="card mb-4" style="background:#232a34; border:1px solid #00eaff33;">
                    <div class="card-header" style="background:#232a34; border-bottom:1px solid #00eaff22;">
                        <h2 class="h5 mb-0" style="color:#00eaff;">Appearance</h2>
                    </div>
                    <div class="card-body">
                        <% if (superhero.appearance.gender) { %>
                            <p><strong style="color:#00eaff;">Gender:</strong> <%= superhero.appearance.gender %></p>
                        <% } %>
                        <% if (superhero.appearance.race) { %>
                            <p><strong style="color:#00eaff;">Race:</strong> <%= superhero.appearance.race %></p>
                        <% } %>
                        <% if (superhero.appearance.height && superhero.appearance.height[0]) { %>
                            <p><strong style="color:#00eaff;">Height:</strong> <%= superhero.appearance.height[0] %></p>
                        <% } %>
                        <% if (superhero.appearance.weight && superhero.appearance.weight[0]) { %>
                            <p><strong style="color:#00eaff;">Weight:</strong> <%= superhero.appearance.weight[0] %></p>
                        <% } %>
                        <% if (superhero.appearance.eyeColor) { %>
                            <p><strong style="color:#00eaff;">Eye Color:</strong> <%= superhero.appearance.eyeColor %></p>
                        <% } %>
                        <% if (superhero.appearance.hairColor) { %>
                            <p><strong style="color:#00eaff;">Hair Color:</strong> <%= superhero.appearance.hairColor %></p>
                        <% } %>
                    </div>
                </div>
            <% } %>

            <% if (superhero.work) { %>
                <div class="card mb-4" style="background:#232a34; border:1px solid #00eaff33;">
                    <div class="card-header" style="background:#232a34; border-bottom:1px solid #00eaff22;">
                        <h2 class="h5 mb-0" style="color:#00eaff;">Work</h2>
                    </div>
                    <div class="card-body">
                        <% if (superhero.work.occupation) { %>
                            <p><strong style="color:#00eaff;">Occupation:</strong> <%= superhero.work.occupation %></p>
                        <% } %>
                        <% if (superhero.work.base) { %>
                            <p><strong style="color:#00eaff;">Base:</strong> <%= superhero.work.base %></p>
                        <% } %>
                    </div>
                </div>
            <% } %>

            <% if (superhero.connections) { %>
                <div class="card mb-4" style="background:#232a34; border:1px solid #00eaff33;">
                    <div class="card-header" style="background:#232a34; border-bottom:1px solid #00eaff22;">
                        <h2 class="h5 mb-0" style="color:#00eaff;">Connections</h2>
                    </div>
                    <div class="card-body">
                        <% if (superhero.connections.groupAffiliation) { %>
                            <p><strong style="color:#00eaff;">Group Affiliation:</strong> <%= superhero.connections.groupAffiliation %></p>
                        <% } %>
                        <% if (superhero.connections.relatives) { %>
                            <p><strong style="color:#00eaff;">Relatives:</strong> <%= superhero.connections.relatives %></p>
                        <% } %>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div> 